<table>
        <thead>
            <tr>
                <th>리그로고</th>
                <th>리그명</th>
            </tr>
        </thead>
        <tbody>
            <% leagues.forEach(league => { %>
                <tr>
                    <td class="center-text">
                        <a href="#" onclick="redirectToTeam('<%= league.league.id %>')">
                            <img src="<%= league.league.logo %>" alt="리그로고">
                        </a>
                    </td>
                    <td class="center-text">
                        <a href="#" onclick="redirectToTeam('<%= league.league.id %>')">
                            <%= league.league.name %>
                        </a>
                    </td>
                </tr>
            <% }); %>
            <script>
                function redirectToTeam(leagueId) {
                    window.location.href = "/teams/" + leagueId; // leagueId를 그대로 사용
                }
            </script>
        </tbody>
    </table>
</body>
</html>
